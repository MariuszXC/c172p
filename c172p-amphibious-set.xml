<?xml version="1.0"?>
<!--
************************************************************************
c172p simulation configuration. This files ties together all the components
used by FGFS to represent the c172p. Components include the flight data
model, instrument panel, and external 3D model.
************************************************************************
-->

<PropertyList include="c172p-main.xml">
    <sim>
        <variant-of>c172p</variant-of>
        <description>Cessna 172P (180 hp) Amphibious</description>
        <previews>
            <preview>
                <type>exterior</type>
                <path>Previews/c172p-preview10.jpg</path>
                <splash type="bool">true</splash>
            </preview>
        </previews>
        <model>
            <variant type="int">4</variant>
        </model>
        <systems>
            <autopilot n="0">
                <path>Systems/KAP140.xml</path>
            </autopilot>
            <property-rule n="108">
                <path>Aircraft/c172p/Systems/electrical.xml</path>
            </property-rule>
        </systems>
    </sim>
    <nasal>
        <kap140>
            <file>Aircraft/Generic/kap140.nas</file>
        </kap140>
        <electrical>
            <file>Nasal/electrical.nas</file>
        </electrical>
    </nasal>
    <controls>
        <engines>
            <active-engine type="int">1</active-engine>
            <gear>
                <gear-down-command type="bool">true</gear-down-command>
            </gear>
        </engines>
        <panel>
            <glass type="bool">false</glass>
        </panel>
    </controls>
    <autopilot>
        <KAP140>
            <settings>
                <auto-pitch-trim type="bool">true</auto-pitch-trim>
            </settings>
        </KAP140>
    </autopilot>
    <fdm>
        <jsbsim>
            <bushkit type="int">4</bushkit>
            <fuel>
                <tank type="bool">1</tank>
            </fuel>
            <gear>
                <gear-pos-norm type="bool">1</gear-pos-norm>
            </gear>
        </jsbsim>
    </fdm>
</PropertyList>
